@model IEnumerable<TShirtEmpAdmin.Models.DeliveryOption>

@{
    string newNum = Request.Params["unum"];
    ViewBag.LogNum = newNum;
    var id = 0;
}

<h2>Manage Delivery Options</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th style="width:30%;">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Active)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id, @unum = ViewBag.LogNum }) | @Html.ActionLink("Show/Hide", "ToggleActive", new { id = item.Id }, htmlAttributes: new { @class = "show" })
        </td>
    </tr>
}

</table>
