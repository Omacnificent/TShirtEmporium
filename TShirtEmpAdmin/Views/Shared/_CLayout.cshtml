<!DOCTYPE html>

<html>
<head>
    <!-- <script src="~/Scripts/pace.js"></script> -->
    <!-- <link href="~/Content/preload-angle-theme.css" rel="stylesheet" /> -->
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
    <title>TeeShirt Emporium</title>
    <link href="~/Content/tabs/component.css" rel="stylesheet" />
    <link href="~/Content/ucontent/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <header>
        <div id="logo"><h1 class="title" style="margin:0;">Tee Shirt Emporium</h1></div>
        <div id="cd-hamburger-menu"><a class="cd-img-replace" href="#0">Menu</a></div>
        @Html.Partial("_CartPartial")
        <nav id="main-nav">
            @Html.Partial("_CLoginPartial")
        </nav>
    </header>
        @if (ViewBag.Success != null)
        {
            <div style ="text-align:center; width:60%; margin:auto;">
                <div style=" text-align:center; width:60%; position:absolute; top:90px;">
                    <p class="alert alert-success">@ViewBag.Success<br /></p>
                </div>
            </div>
        }
        @if (ViewBag.Warning != null)
        {
            <div style="text-align:center; width:60%; margin:auto;">
                <div style=" text-align:center; width:60%; position:absolute; top:90px;">
                    <p class="alert alert-warning">@ViewBag.Warning<br /></p>
                </div>
            </div>
        }
    <div id="tabs" class="tabs" style="margin-top:8em; z-index:2;">
        <nav class="nav-tabs-responsive">
            <ul class="nav nav-tabs" role="tablist">
                <li style="padding:10px;"><span style="font-size:large; font-weight:bold; color: #273f87;">@ViewBag.TabTitle</span></li>
            </ul>
        </nav>
        <div class="content">
            @RenderBody()
        </div>
    </div>
    <div id="cd-shadow-layer"></div>
    <div id="cd-cart">
    <div style="width:100%;">
        @{Html.RenderAction("Cart","Orders");}
    </div> <!-- cd-cart -->
    </div>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="~/Scripts/uscripts/cbpFWTabs.js"></script>
    <script src="~/Scripts/main.js"></script>
    <script>
        new CBPFWTabs(document.getElementById('tabs'));
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            $(".alert").fadeIn().delay(3000).fadeOut(1000).stop();


            $('a').each(function () {
                var address = $(this).attr('href');
                var element = $(this).contents();
                element.data("hrefAddress", address).addClass("link");

                element.click(function () {
                    var newWindow = window.open(element.data("hrefAddress"), '_blank');
                    newWindow.focus();
                });
            });
        });
    </script>
</body>
</html>
