@model  TShirtEmpAdmin.Models.UserLoginViewModel

@{
    Layout = "~/Views/Shared/_CLoginLayout.cshtml";
}
        <section id="loginForm">
    @using (Html.BeginForm("UserLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="cd-form">
            <p class="fieldset">
                @Html.LabelFor(m => m.UserName, new { @class = "image-replace cd-username" })
                @Html.TextBoxFor(m => m.UserName, new { @class = "full-width has-padding has-border", @placeholder = "Username or Register as New User"})
            </p>
            @Html.ValidationMessageFor(m => m.UserName)
            <p>&nbsp;</p>
            <p class="fieldset">
                @Html.LabelFor(m => m.Password, new { @class = "image-replace cd-password" })
                @Html.PasswordFor(m => m.Password, new { @class = "full-width has-padding has-border", @placeholder = "Your password" })
                <a href="#" class="hide-password">Show</a>
            </p>
            @Html.ValidationMessageFor(m => m.Password)
            <p class="fieldset">
                <input type="submit" value="Log in" class="btn btn-default full-width" />
            </p>
            <p class="fieldset">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </p>
            <p class="fieldset">
                <span style="background:white;padding: 0.5em;border-radius: 5px; margin-right: 2%; border:1px black solid;">
                    @Html.ActionLink("New User?", "Register")
                </span>
                <span style="background:white;padding: 0.5em;border-radius: 5px; border:1px black solid;">
                    @Html.ActionLink("Forgot your password?", "ForgotPassword")
                </span>
            </p>
        </div>
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

