@model TShirtEmpAdmin.Models.Markup

@{
    string newNum = Request.Params["unum"];
    ViewBag.LogNum = newNum;
    var id = 0;
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Markup</h4>
        <hr />
