@model IEnumerable<TShirtEmpAdmin.Models.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Manage Orders</h2>

<h4>Total sales: $@ViewBag.CompletedTotal</h4>
<h4>Total abandoned sales: $@ViewBag.OrderAbandoned</h4>
<hr />
@using (@Html.BeginForm())
{ 
    <p>
        Search: @Html.TextBox("SearchString")
        Shirt Cause: @Html.DropDownList("shirtName", "All") 
        <input type="submit" value="Search">
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShirtCause)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderCompleted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecievedShirt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeliveryOption)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderNum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShirtCause)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderCompleted)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RecievedShirt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ODeliveryOption)
        </td>
        <td>
            @Html.ActionLink("Go To Order", "Find", new { id=item.OrderNum }) 
        </td>
    </tr>
}

</table>
<br />
@Html.Partial("PagedPartial1")
