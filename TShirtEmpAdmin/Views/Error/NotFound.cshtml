@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Paage Not Found";
    Layout = "~/Views/Shared/_CLayout.cshtml";
}
<section id="section-1" style="text-align:center;">
    <h2 class="text-danger">The page you are looking for has been moved or deleted.</h2>
    @if (Request.IsAuthenticated)
    {
        <h2 class="text-danger">
            The page you are looking for has been moved or deleted. Please @Html.ActionLink("click here to continue.", "FindMe", "Account")
        </h2>
    }
    @if (!Request.IsAuthenticated)
    {
        <h2 class="text-danger">
            The page you are looking for has been moved or deleted. Please @Html.ActionLink("click here to log in.", "UserLogin", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
        </h2>
    }
</section>

